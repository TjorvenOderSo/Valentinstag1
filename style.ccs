body {
    background: #ffe6f0;
    font-family: Arial, sans-serif;
    text-align: center;
    padding-top: 50px;
}

img {
    width: 300px;
    border-radius: 10px;
    margin-top: 20px;
}

button {
    margin-top: 30px;
    padding: 15px 30px;
    font-size: 18px;
    border-radius: 8px;
    border: none;
    background-color: #ff4d6d;
    color: white;
    cursor: pointer;
}

button:hover {
    background-color: #e60039;
}
